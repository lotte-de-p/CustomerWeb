{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "<%= offsetFromRoot %>dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true
  },
  "exclude": [
    "src/test-setup.ts",
    "src/**/*.spec.ts",
    "jest.config.ts",
    "src/**/*.test.ts",
    "cypress/**/*",
    "cypress.config.ts",
    "**/*.cy.ts",
    "**/*.cy.js",
    "**/*.cy.tsx",
    "**/*.cy.jsx"
  ],
  "include": ["src/**/*.ts"]
}
